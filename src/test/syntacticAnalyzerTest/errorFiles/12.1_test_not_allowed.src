// ====== Class declarations ====== //
class POLYNOMIAL {
	public func evaluate(float x) : float;
};

class LINEAR inherits POLYNOMIAL {
	private float a;
	private float b;

	public func build(float A, float B) : LINEAR;
	public func evaluate(float x) : float;
};

class QUADRATIC inherits POLYNOMIAL {
	private float a;
	private float b;
	private float c;

	public func build(float A, float B, float C) : QUADRATIC;
	public func evaluate(float x) : float;
};

