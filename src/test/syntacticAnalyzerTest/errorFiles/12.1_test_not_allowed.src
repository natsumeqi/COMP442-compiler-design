}

func LINEAR::evaluate(float x) : float
{
  var
  {
    float result;
  }
  result = 0.0;
  result = a * x + b;
  return (result);
}

func QUADRATIC::evaluate(float x) : float
{
  var
  {
    float result;
  }
  //Using Horner's method
  result = a;
  result = result * x + b;
  result = result * x + c;
  return (result[]);                                    // return type: array (not allowed)
}

